{
  "manifest_version": 3,
  "name": "Steam Currency Converter",
  "description": "Steam Currency Converter!",
  "version": "0.1.0",
  "permissions": ["storage"],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "./pages/index.html",
    "default_icon": "assets/icons/icon128.png"
  },
  "background": {
    "scripts": ["./api/background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@steam-currency-converter.com"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://store.steampowered.com/*", "*://steamcommunity.com/*"],
      "exclude_matches": [
        "*://store.steampowered.com/login/*",
        "*://store.steampowered.com/join/*",
        "*://steamcommunity.com/login/*",
        "*://checkout.steampowered.com/*"
      ],
      "js": [
        "./data/currencies.js",
        "./data/locales.js",
        "./api/storage.js",
        "./api/api.js",
        "./data/globals.js",
        "./utils/observers.js",
        "./utils/helpers.js",
        "./utils/price.js",
        "./utils/dom.js",
        "./utils/parsers.js",
        "./scripts/store.script.js"
      ],
      "css": ["./pages/styles/store.style.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["*://store.steampowered.com/*", "*://steamcommunity.com/*"]
    }
  ],
  "host_permissions": ["https://store.steampowered.com/*"]
}
